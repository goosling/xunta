<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ixunta="http://schemas.android.com/apk/res/com.ixunta"
    android:id="@+id/main_infoWindow_ll1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/infowindow_bg"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/main_infoWindow_ll2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/main_infowindow_margin_left"
        android:layout_marginTop="@dimen/main_infowindow_margin_top"
        android:layout_marginRight="@dimen/main_infowindow_margin_right"
        android:orientation="horizontal" >

        <com.ixunta.client.myview.RoundedCornerImageView
            android:id="@+id/main_infoWindow_iv_portrait"
            android:layout_width="@dimen/main_infowindow_portrait_width"
            android:layout_height="@dimen/main_infowindow_portrait_height"
            android:layout_gravity="center"
            android:contentDescription="@string/iv_content_des"
            android:scaleType="fitXY"
            android:src="@drawable/portrait_default_ta"
            ixunta:radius="@dimen/main_infowindow_iv_corner_radius_float" />

        <LinearLayout
            android:id="@+id/main_infoWindow_ll4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/main_infowindow_info_margin_to_portrait"
            android:gravity="center_vertical|left"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/main_infoWindow_tv_gender_and_age"
                android:layout_width="@dimen/main_infowindow_tv_width"
                android:layout_height="0dp"
                android:layout_weight="1"
				android:textIsSelectable="false"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/main_infoWindow_tv_space_and_time_and_dest"
                android:layout_width="@dimen/main_infowindow_tv_width"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:lines="4"
                android:textIsSelectable="false"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_infoWindow_ll3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/main_infowindow_margin_bottom"
        android:layout_marginLeft="@dimen/main_infowindow_margin_left"
        android:layout_marginTop="@dimen/main_infowindow_margin_to_iv"
        android:layout_marginRight="@dimen/main_infowindow_margin_right"
       	android:gravity="center"
        android:orientation="horizontal" >
            <Button
                android:id="@+id/main_infoWindow_bt_sms"
                style="@style/bt_default"
                android:layout_width="@dimen/main_infowindow_bt_width"
                android:layout_height="@dimen/main_infowindow_bt_height"
                android:layout_marginRight="@dimen/main_infowindow_bt_margin_to_another"
                android:drawableLeft="@drawable/ic_action_chat"
                android:drawablePadding="@dimen/main_infowindow_bt_drawable_padding"
                android:paddingLeft="@dimen/main_infowindow_bt_padding"
                android:text="@string/main_infowindow_bt_sms" 
                android:textSize="@dimen/main_infowindow_bt_text_size"/>

            <Button
                android:id="@+id/main_infoWindow_bt_call"
                style="@style/bt_default"
                android:layout_width="@dimen/main_infowindow_bt_width"
                android:layout_height="@dimen/main_infowindow_bt_height"
                android:layout_marginLeft="@dimen/main_infowindow_bt_margin_to_another"
                android:drawableLeft="@drawable/ic_action_call"
                android:drawablePadding="@dimen/main_infowindow_bt_drawable_padding"
                android:text="@string/main_infowindow_bt_call" 
                android:textSize="@dimen/main_infowindow_bt_text_size"/>
    </LinearLayout>
</LinearLayout>